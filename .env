# Configurações do Projeto
PROJECT_NAME=ARKITECT Backend
VERSION=1.0.0
API_V1_STR=/api/v1

# Segurança
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["*"]

# Database
DATABASE_URL=sqlite:///./arkitect.db

# Logging
LOG_LEVEL=INFO

# Configurações Principais do ARKITECT
ARKITECT_ENV=development
ARKITECT_API_KEY=dev_eon_framework_key
ARKITECT_DB_URL=sqlite:///./arkitect.db
ARKITECT_LOG_LEVEL=DEBUG
ARKITECT_PORT=8000
ARKITECT_HOST=localhost
ARKITECT_WORKERS=4

# Configurações de Ambiente Legacy (Mantidas para compatibilidade)
ENVIRONMENT=development
DEBUG=true

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=development_password
REDIS_DB=0

# EON Framework Integration
EON_FRAMEWORK_REQUIRED=false
EON_FRAMEWORK_HOST=localhost
EON_FRAMEWORK_PORT=8001
EON_FRAMEWORK_TIMEOUT=30
EON_FRAMEWORK_API_KEY=dev_eon_framework_key
STANDALONE_MODE=true

# Task Mesh Configuration
TASK_MESH_WORKERS=4
TASK_MESH_QUEUE_SIZE=1000
TASK_MESH_RETRY_LIMIT=3

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Extended Logging Configuration
LOG_FORMAT=json
LOG_FILE=logs/arkitect.log
LOG_ROTATION=1d
LOG_RETENTION=30d
ENABLE_CONSOLE_LOG=true

# Security Settings
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:*

# Development Configuration
DEVELOPMENT_MODE=true
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_DETAILED_ERRORS=true

# Standalone Development Settings
LOCAL_PROCESSING=true
MOCK_EON_RESPONSES=true
ENABLE_LOCAL_CACHE=true
MAX_LOCAL_TASKS=100
LOCAL_TASK_TIMEOUT=300
