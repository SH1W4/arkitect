# Alerting
# ALERT_WEBHOOK_URL=https://hooks.slack.com/services/...
# ALERT_EMAIL_RECIPIENTS=admin@arkitect.dev,ops@arkitect.dev
# ALERT_THRESHOLD_CPU=80
# ALERT_THRESHOLD_MEMORY=85
# ALERT_THRESHOLD_DISK=90

# ========================================
# CONFIGURAÇÕES EXPERIMENTAIS
# ========================================
# Features em desenvolvimento (use com cuidado)
EXPERIMENTAL_QUANTUM_PROCESSING=false
EXPERIMENTAL_NEURAL_NETWORKS=false
EXPERIMENTAL_SYMBIOTIC_AGENTS=true
EXPERIMENTAL_META_GOVERNANCE=true

# Configurações do Ambiente
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# EON Framework
EON_FRAMEWORK_HOST=localhost
EON_FRAMEWORK_PORT=8001
EON_FRAMEWORK_TIMEOUT=30
EON_FRAMEWORK_API_KEY=

# Task Mesh
TASK_MESH_WORKERS=4
TASK_MESH_QUEUE_SIZE=1000
TASK_MESH_RETRY_LIMIT=3

# Monitoramento
ENABLE_METRICS=true
METRICS_PORT=9090

