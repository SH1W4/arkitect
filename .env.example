# ARKITECT Environment Configuration
# Copie para .env e ajuste conforme necessário

# ========================================
# CONFIGURAÇÕES GERAIS DO SISTEMA
# ========================================
ARKITECT_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ========================================
# PostgreSQL
DATABASE_URL=postgresql://arkitect:arkitect_pass@localhost:5432/arkitect
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arkitect
DB_USER=arkitect
DB_PASSWORD=arkitect_pass
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_ECHO=false

# ========================================
# CONFIGURAÇÕES DE CACHE (REDIS)
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=100
REDIS_TIMEOUT=10

# ========================================
# CONFIGURAÇÕES DE ARMAZENAMENTO (MINIO)
# ========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=arkitect
MINIO_SECRET_KEY=arkitect_secret
MINIO_BUCKET_NAME=arkitect-storage
MINIO_SECURE=false
MINIO_REGION=us-east-1

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
# Prometheus
PROMETHEUS_GATEWAY=localhost:9090
PROMETHEUS_JOB_NAME=arkitect-api
PROMETHEUS_INSTANCE=localhost:8000
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-long
PASSWORD_SALT_ROUNDS=12

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ========================================
# CONFIGURAÇÕES DE API
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_LOG_LEVEL=info
API_ACCESS_LOG=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ========================================
# CONFIGURAÇÕES DE CELERY
# ========================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# ========================================
# CONFIGURAÇÕES DOS AGENTES ARKITECT
# ========================================
AGENTS_MAX_CONCURRENT=10
AGENTS_DEFAULT_TIMEOUT=300
AGENTS_HEARTBEAT_INTERVAL=30
AGENTS_RETRY_ATTEMPTS=3
AGENTS_REGISTRY_TTL=3600

# ========================================
# CONFIGURAÇÕES DE INTEGRAÇÃO
# ========================================
# WebHooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# External APIs
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RATE_LIMIT=100

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# Testing
TEST_DATABASE_URL=postgresql://arkitect:arkitect_pass@localhost:5432/arkitect_test
TEST_REDIS_URL=redis://localhost:6379/15

# Debugging
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_AGENTS=false

# Performance
PROFILING_ENABLED=false
PROFILING_DIR=./profiling

# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO (COMENTADAS)
# ========================================
# Descomente e configure para produção

